{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "image": {
      "properties": {
        "repository": {},
        "pullPolicy": {
          "enum": [
            "IfNotPresent",
            "Always"
          ]
        }
      }
    },
    "service": {
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "remoteControlPlane": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "if": {
        "properties": {
          "enabled": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "api": {
            "type": "object",
            "required": [
              "protocol",
              "hostname",
              "token"
            ],
            "properties": {
              "hostname": {
                "pattern": "^[a-z0-9][a-z0-9-.]{2,63}(:[0-9]+)?$"              },
              "protocol": {
                "enum": [
                  "http",
                  "https"
                ]
              },
              "apiValidateTls": {
                "type": "boolean"
              },
              "token": {
                "pattern": "^[A-Za-z0-9-.]{2,63}$"
              }
            }
          }
        }
      }
    }
  }
}
